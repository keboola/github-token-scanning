{
  "autoload": {
    "psr-4": {
      "Keboola\\GithubTokenScanning\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\GithubTokenScanning\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.3",
    "ext-json": "*",
    "bref/bref": "^0.4.1",
    "monolog/monolog": "^1.24"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phpstan/phpstan-shim": "^0.9.1",
    "phpunit/phpunit": "^7.1",
    "keboola/coding-standard": ">=7.0.2"
  },
  "scripts": {
    "tests": "phpunit",
    "phpstan": "phpstan analyse --no-progress --level=max src tests -c phpstan.neon",
    "phpcs": "phpcs --extensions=php src tests",
    "phpcbf": "phpcbf --extensions=php src tests",
    "phplint": "parallel-lint -j 10 --exclude vendor .",
    "build": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-all --strict",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
